//Jenkinsfile (Declarative Pipeline)
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from GitHub
                git branch: 'main', 
                url: 'https://github.com/sandeepsirivella/pipeline-job.git'
            }
        }

        stage('Build & Test') {
            steps {
                // Run the Python file to execute and test it
                sh 'python3 file1.py'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed - check console output for results.'
        }
    }
}
